{
    "private": true,
    "scripts": {
        "build": "pnpm -r build",
        "watch": "pnpm run -r --parallel --no-bail build -w",
        "test": "pnpm -r test",
        "fmt": "prettier -w \"packages/*/src/**/*.{ts,tsx}\"",
        "lint": "pnpm -r lint",
        "clean": "rm -rf dist node_modules packages/*/{dist,node_modules}",
